@page
@using ResumeMetadataUI;
@model IndexModel
@{
    ViewData["Title"] = "FileFusion";
}

<div class="container mt-5">
    <div class="alert alert-info">
        <strong>We do not store any files on our servers. This app is open-source, allowing everyone to view and inspect its code.</strong>
    </div>

    @if (Model.MessageStatus == MessageType.Warning)
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong> @Html.Raw(Model.OutputText)
        </div>
    }
    else if (Model.MessageStatus == MessageType.Information)
    {
        <div class="alert alert-info">
            <strong>Information:</strong> @Html.Raw(Model.OutputText)
        </div>
    }

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">FileFusion: a metadata insertion tool</h4>
            <p>
                Boost your documents' appeal across various markets by embedding related search keywords as hidden metadata. For instance, in a 'Training' related document, include terms like 'Instructor', 'Coach', 'Mentor', and their translations. Apply this tactic to all pertinent terms for broader reach.
            </p>

            <div style="margin-top:3em">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="docxFile">Choose a <strong>.pdf</strong>  or <strong>.docx</strong> file:</label>
                        <div class="input-group">
                            <input type="file" asp-for="InputFile" class="form-control-file border" accept=".docx,.pdf" id="sourceDocument" placeholder="Choose file...">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="metadata">Metadata to Insert</label>
                        <textarea asp-for="MetadataContent" class="form-control" id="metadata" rows="3" placeholder="Expertise, Skill, Ability, Talent, etc..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Generate</button>
                </form>

            </div>

        </div>
    </div>
</div>